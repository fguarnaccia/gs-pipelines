pipeline {
  environment   {
      version = "2.0.0"
      suffix = "-unstable"
      tbbranch = "develop"  
      erpbranch = "${env.tbbranch}"
      tagongit = false
      giturl= "https://github.com/Microarea/" 
      gittag = "cloud/v${env.version}.${env.BUILD_ID}${env.suffix}"
      gitmsg = "Jenkins tag ${env.BUILD_ID} ${env.version}" 
